<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TxtDébut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Tu te réveilles dans le noir, pour quelques secondes, tu penses être dans ton lit. La réalité te frappe comme un point au nez. Le sol de béton, les cries et pleures distants, ils te rammènent à la réalité: le courant a coupé, les cages sont brisés, les bêtes sont libres! Tu n'as qu'une seule chance de survivre: atteindre la surface. Le chemin sera dangereux, mais rester en place est une sentence de mort. Il faut se réveiller, temps de sauver ta vie!"
        android:textAlignment="center"
        android:textColor="#AE0808"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.199" />

    <Button
        android:id="@+id/btnSart"
        android:layout_width="163dp"
        android:layout_height="86dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="103dp"
        android:backgroundTint="#390303"
        android:onClick="onClickStart"
        android:text="Survivre!"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TxtDébut" />

</androidx.constraintlayout.widget.ConstraintLayout>